            <class name="RamChavanTestAutomation.UI_API_HybdriFramework.ui.LoginUITests"/>
            <class name="RamChavanTestAutomation.UI_API_HybdriFramework.ui.ProductUITests"/>
        </classes>
    </test>

    <!-- ðŸ”¹ UI Tests on Firefox -->
