            <class name="RamChavanTestAutomation.UI_API_HybdriFramework.api.ProductAPITests"/>
        </classes>
    </test>

    <!-- ðŸ”¹ Integration / Hybrid Tests -->
    <test name="Integration Tests - Chrome">
